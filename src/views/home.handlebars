<div>
  <form action="" id="signupForm">
    <label for="">Nombre</label>
    <p>{{user.first_name}}</p>
    <label for="">Apellido</label>
    <p>{{user.last_name}}</p>
    <label for="">Rol</label>
    <p>{{user.role}}</p>

    <a href="http://localhost:8080/api/auth/logout">Cerrar sesion</a>
</form>
  <h2>Lista de productos</h2>
  {{#if allProductos.docs}}
  <table class="table table-sm table-hover">
    <caption>Lista total de productos</caption>
    <thead>
      <tr>
        <th scope="col">Codigo</th>
        <th scope="col">Nombre</th>
        <th scope="col">Descripcion</th>
        <th scope="col">Precio</th>
        <th scope="col">Categoria</th>
        <th scope="col">Cart</th>
      </tr>
    </thead>
    <tbody>
      {{#each allProductos.docs}}
      <tr>
        <td>{{this.code}}</td>
        <td>{{this.title}}</td>
        <td>{{this.description}}</td>
        <td>{{this.price}}</td>
        <td>{{this.category}}</td>
        <td><button id="buttonAddCart" onclick="addCart('{{this._id}}')">ADD CART</button></td>
      </tr>
      {{/each}}
    </tbody>
  </table>

  {{#if allProductos.hasPrevPage}}
  <a href= {{allProductos.prevLink}}><button class="prevPage">Prev Page</button></a>
  {{/if}}

  {{#if allProductos.hasNextPage}}
  <a href={{allProductos.nextLink}}><button class="nextPage">Next Page</button></a>
  {{/if}}

  {{else}}
  <h2>No hay productos en la lista</h2>
  {{/if}}
</div>