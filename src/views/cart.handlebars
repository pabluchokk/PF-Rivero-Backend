<div>
    <h2>Lista de productos</h2>
    {{#if allProductos.productos}}
    <table class="table table-sm table-hover">
        <caption>Lista total de productos</caption>
        <thead>
            <tr>
                <th scope="col">Codigo</th>
                <th scope="col">Nombre</th>
                <th scope="col">Descripcion</th>
                <th scope="col">Precio</th>
                <th scope="col">Categoria</th>
            </tr>
        </thead>
        <tbody>
            {{#each allProductos}}
            <tr>
                <td>{{this.products.code}}</td>
                <td>{{this.products.title}}</td>
                <td>{{this.products.description}}</td>
                <td>{{this.products.price}}</td>
                <td>{{this.products.category}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    {{else}}
    <h2>No hay productos en este carrito</h2>
    {{/if }}
</div>